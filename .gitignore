# Initialize local repo
cd auto-secure-server
git init

# Create .gitignore
cat > .gitignore << 'EOF'
# Docker
*.swp
*.swo
.DS_Store
.env
*.env.local
docker-compose.override.yml

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Runtime data
data/
backups/
mysql-data/
tmp/
temp/

# IDE
.vscode/
.idea/
*.iml

# OS
Thumbs.db
EOF

# Create README.md (see below for content)
# Create LICENSE (recommend MIT or Apache 2.0)

# First commit
git add .
git commit -m "Initial commit: Auto-Secure Server v1.0"